{
  "DomainSettings": {
    "schema": "http",
    "host": "localhost",
    "port": 5000
  },
  "ConnectionString": "Filename=microwf.sqlite",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.Hosting.Lifetime":"Information",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Warning",
        "tomware.Microwf.Infrastructure.WorkflowEngineService": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext}] {Message:lj} {NewLine}{Exception}"
        }
      }
    ]
  },
  "Worker": {
    "Enabled": true,
    "Interval": 500
  },
  "Workflows": {
    "Types": [
      {
        "Type": "HolidayApprovalWorkflow",
        "Title": "Holiday",
        "Description": "Simple holiday approval process.",
        "Route": "holiday"
      },
      {
        "Type": "IssueTrackingWorkflow",
        "Title": "Issue",
        "Description": "Simple issue tracking process.",
        "Route": "issue"
      },
      {
        "Type": "StepperWorkflow",
        "Title": "Stepper",
        "Description": "Dummy workflow to test workflow processor",
        "Route": ""
      }
    ]
  }
}