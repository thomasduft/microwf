{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STS",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-sts",
      "program": "${workspaceRoot}/samples/STS/bin/Debug/net6.0/STS.dll",
      "args": [
        "--urls",
        "https://localhost:5000"
      ],
      "cwd": "${workspaceRoot}/samples/STS",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "WebApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-webapi",
      "program": "${workspaceRoot}/samples/WebApi/bin/Debug/net6.0/WebApi.dll",
      "args": [
        "--urls",
        "https://localhost:5001"
      ],
      "cwd": "${workspaceRoot}/samples/WebApi",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceRoot}/Views"
      },
      "console": "integratedTerminal",
    },
    {
      "name": "ConsoleClient",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-ConsoleClient",
      "program": "${workspaceRoot}/samples/ConsoleClient/bin/Debug/net6.0/ConsoleClient.dll",
      "args": [],
      "cwd": "${workspaceRoot}/samples/ConsoleClient",
      "stopAtEntry": false,
      "console":"externalTerminal"
    }
  ]
}