{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-sts",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceRoot}/samples/STS/STS.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-webapi",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceRoot}/samples/WebApi/WebApi.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-ConsoleClient",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceRoot}/samples/ConsoleClient/ConsoleClient.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=lcov",
        "/p:CoverletOutput=./../lcov",
        "${workspaceFolder}/tests/microwf.Tests.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}